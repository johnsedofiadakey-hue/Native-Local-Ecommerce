# ------------------------------------
# DATABASE
# ------------------------------------
DATABASE_URL="postgresql://commerce_user:change_me_in_production@localhost:5432/commerce_platform?schema=public"

# ------------------------------------
# APPLICATION
# ------------------------------------
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# ------------------------------------
# SECURITY
# ------------------------------------
JWT_SECRET=change_this_to_a_very_strong_secret_key_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=change_this_to_another_very_strong_secret_key
JWT_REFRESH_EXPIRES_IN=30d

BCRYPT_SALT_ROUNDS=12

# Session encryption key (32 characters)
SESSION_SECRET=change_this_to_32_character_key

# ------------------------------------
# RATE LIMITING
# ------------------------------------
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ------------------------------------
# CORS
# ------------------------------------
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ------------------------------------
# REDIS
# ------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# ------------------------------------
# PAYSTACK
# ------------------------------------
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret_here
PAYSTACK_BASE_URL=https://api.paystack.co

# ------------------------------------
# HUBTEL (SMS/OTP)
# ------------------------------------
HUBTEL_CLIENT_ID=your_hubtel_client_id
HUBTEL_CLIENT_SECRET=your_hubtel_client_secret
HUBTEL_API_KEY=your_hubtel_api_key
HUBTEL_SENDER_ID=CommerceGH
HUBTEL_BASE_URL=https://api.hubtel.com/v1

# ------------------------------------
# AWS S3 (File Storage)
# ------------------------------------
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=ghana-commerce-uploads
AWS_S3_BUCKET_URL=https://ghana-commerce-uploads.s3.eu-west-1.amazonaws.com

# ------------------------------------
# PLATFORM CONFIGURATION
# ------------------------------------
PLATFORM_NAME="Ghana Commerce Platform"
PLATFORM_DOMAIN=commercegh.com
PLATFORM_SUPPORT_EMAIL=support@commercegh.com
PLATFORM_SUPPORT_PHONE=+233200000000

# Admin defaults
ADMIN_DEFAULT_EMAIL=admin@commercegh.com
ADMIN_DEFAULT_PASSWORD=change_me_immediately

# Merchant verification
MERCHANT_VERIFICATION_REQUIRED=true
MERCHANT_GRACE_PERIOD_DAYS=7

# Order tracking
ORDER_ID_PREFIX=ORD

# Subscription billing
SUBSCRIPTION_GRACE_PERIOD_DAYS=3
SUBSCRIPTION_WARNING_DAY_1=1
SUBSCRIPTION_WARNING_DAY_2=3

# ------------------------------------
# LOGGING
# ------------------------------------
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_FILE_PATH=./logs

# ------------------------------------
# MONITORING (Optional - for production)
# ------------------------------------
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
